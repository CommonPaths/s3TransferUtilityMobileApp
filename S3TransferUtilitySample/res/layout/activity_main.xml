<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D2F31"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="#612d57"
        android:contentDescription="Logo"
        android:src="@drawable/kingcountylogo" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="334dp"
        android:layout_height="22dp"
        android:text="Enter Field Review ID:"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextNumberFieldRID"
        android:layout_width="333dp"
        android:layout_height="37dp"
        android:background="#3C3F41"
        android:ems="10"
        android:inputType="number"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="333dp"
        android:layout_height="59dp"
        android:layout_gravity="center"
        android:background="#612d57"
        android:shadowColor="#000000"
        android:text="Take Photo"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonUploadMain"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="#612d57"
        android:padding="20dp"
        android:text="@string/manage_upload"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonDownloadMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="#612d57"
        android:padding="20dp"
        android:text="@string/manage_download"
        android:textColor="#FFFFFF"
        android:visibility="invisible" />

</LinearLayout>